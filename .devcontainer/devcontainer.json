{
  "name": "swift-svelte-cqrs-es-example",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "platform": "linux/arm64"
  },
  "workspaceMount": "source=cqrs-es-src,type=volume,target=/workspace",
  "workspaceFolder": "/workspace",
  "postCreateCommand": [
    "echo fs.inotify.max_user_watches=524288 >> /etc/sysctl.conf && sysctl -p",
    "bun install --cache-dir=/root/.bun-cache",
    "bunx playwright install --with-deps"
  ],
  "mounts": [
    "source=bun-cache,type=cache,target=/root/.bun-cache",
    "source=playwright-browsers,type=cache,target=/ms-playwright"
  ],
  "forwardPorts": [
    5173
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-playwright.playwright"
      ]
    }
  }
}
